.widget-wrap
	margin-top: 1em
.widget-title
	color: $color-widget-title
			
.widget ul
	list-style: none
	padding: 0
.widget ul li
	
	padding-top: 1em
	//margin-left:1em
	
.widget ul li a
	color: $color-a
	text-decoration: none
.widget ul li a:hover + span,.widget ul li a:hover
	text-decoration: none
	cursor:pointer
	color: $color-a-hover
.widget ul li span:before
	content: '(' 
.widget ul li span:after
	content: ')'
 .widget ul li span
	color: $color-a
.tags
	margin-top: 0.5em	
.tags a
	display:inline-block
	margin-top: .5em
	text-decoration: none
	color: $color-a
.tags a span:before
	content: '('
.tags a span:after
	content: ')'
.tags a:hover + span,.tags a:hover
	text-decoration: none
	cursor:pointer
	color: $color-a-hover